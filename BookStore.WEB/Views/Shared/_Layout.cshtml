    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/NavStyles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg sticky-top">
        <a href="#" class="navbar-brand">BookStore</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new {@class = "form-inline"}))
            {
                    <input class="form-control mr-sm-2" placeholder="Автор/Книга" data-autocomplete-source='@Url.Action("Autocomplete", "Home")' name="searchName" />
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Поиск</button>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Войти", "Login", "Account", null, new { @class = "btn-outline-light btn ml-1" })
            }
            else
            {
                @Html.ActionLink("Выйти", "Logout", "Account", null, new { @class = "btn-outline-light btn ml-1" })
            }
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Админ панель","Main","Admin",null,new {@class = "btn btn-outline-light ml-1"})
            }

            <a class="btn btn-outline-light mx-1" href="@Url.Action("Index","ShoppingCart",  new { returnUrl = Request.Url.PathAndQuery })">
                    <i class="fas fa-shopping-cart mr-1"></i>Корзина
                </a>
            
        </div>
    </nav>
    <section class="container-fluid mt-2">
        <div class="row">
            <div class="col-sm-2">
                @Html.Action("GetNav", "Nav")
            </div>
            <div class="col-sm-10">@RenderBody()</div>
         </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")'></script>
<script>
    $(document).ready(function () {
        $("#success").removeClass("hidden");
        $("#success").hide();
    })
    function OnSuccess() {
        $('#success').show(1000, function () {
            setTimeout(function () {
                $('#success').hide(500);
            }, 1000);
        });
           
    }
    $(function () {
        $("[data-autocomplete-source]").each(function () {
            var target = $(this);
            target.autocomplete({ source: target.attr("data-autocomplete-source") });
                
        });
    });
    //accordeon
    $(document).ready(function () {
        $(".bigDescription").removeClass("hidden")
            
        $(".bigDescription").hide();
        $(".showDescription").click(function() {
            var currentDesc = $(this).next(".bigDescription");
            var currentSmDesc = $(this).prev(".smDescription");
            $(".description .bigDescription").hide();
            $(".description .showDescription").show();
            $(this).next(".showDescription").hide();
               
            $(".description .smDescription").show();
            currentSmDesc.hide();
            currentDesc.show();
            $(this).hide();

                   
                    
                   
        });
        $(".hideDescription").click(function() {
                
            $(".bigDescription").hide();
            $(".description .smDescription").show();
            $(".description .showDescription").show();
        })
    });
</script>
<script>
    $(document).ready(function () {
        loadData();
    });
    function Add() {
        var res = validate();
        if (res == false)
            return false;
        var bookObj = {
            Name: $("#Name").val(),
            Price: $("#Price").val(),
            Description: $("#Decription").val(),
            Author: $("#Author").val(),
            Category: $("#Category").val()

    };
        $.ajax({
            url: "/Admin/Create",
            data: JSON.stringify(bookObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function(result) {
                loadData();
                $("#myModal").modal("hide");

            },
            error: function(errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    //Load Data function
    function Update() {
        var res = validate();
        if (res == false) {
            return false;
        }
        var bookObj = {
            Id: $("#Id").val(),
            Name: $("#Name").val(),
            Price: $("#Price").val(),
            Description: $("#Decription").val(),
            Author: $("#Author").val(),
            Category: $("#Category").val()
        };
        alert(bookObj.Category);
        $.ajax({
            url: "/Admin/Update",
            data: JSON.stringify(bookObj),
            type: 'POST',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                loadData();
                $('#myModal').modal('hide');
                $('#Name').val("");
                $('#Price').val("");
                $('#Decription').val("");
                $("#Author").val(),
                $("#Category").val()
               
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
        
    }
    function loadData() {
        $.ajax({
            url: "/Admin/ListAllBooks",
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                var html = '';
                $.each(result, function (key, item) {
                    html += '<tr>';
                    html += '<td>' +item.Id + '</td>'
                    html += '<td>' + item.Name + '</td>'
                    html += '<td>' + item.Price + ' руб' + '</td>'
                    html += '<td>' + item.Author + '</td>'
                    html += '<td>' + item.Category + '</td>'
                    html += '<td> <a href="#" onclick="return getbyId(' + item.Id + ')">Обновить</a></td>'
                    html += '<td> <a href="#" onclick ="Delete(' + item.Id + ')">Удалить</a></td>';
                    html += '</tr>';
                });
                $('.tbody').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    function Delete(id) {
        var confirmation = confirm("Вы уверены что хотите удалить эту запись");
        if (confirmation) {
            $.ajax({
                url: '/Admin/Delete/' +id,
                type: 'POST',
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function(result) {
                    loadData();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    }
    function clearTextBox() {
        $('#Id').val("");
        $('#Name').val("");
        $('#Price').val("");
        $('#Decription').val("");
        $('#Author').val('');
        $('#Category').val('');
        $('#btnUpdate').hide();
        $('#EditingLabel').hide();
        $('#AddingLabel').show();
        $('#btnAdd').show();
        $('#Name').css('border-color', 'lightgrey');
        $('#Price').css('border-color', 'lightgrey');
        $('#Decription').css('border-color', 'lightgrey');
        $('#Author').css('border-color', 'lightgrey');
        $('#Decription').css('border-color', 'lightgrey');
   
    }
    function validate() {
        var isValid = true;
        if ($('#Name').val().trim() == "") {
            $('#Name').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#Name').css('border-color', 'lightgrey');
        }
        if ($('#Price').val().trim() == "") {
            $('#Price').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#Price').css('border-color', 'lightgrey');
        }
        if ($('#Decription').val().trim() == "") {
            $('#Decription').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#Decription').css('border-color', 'lightgrey');
        }
        if ($('#Author').val().trim() == "") {
            $('#Author').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#Author').css('border-color', 'lightgrey');
        }
        if ($("#Category").val().trim() == "") {
            $("#Category").css('border-color', 'Red');
            isValid = false;
        } else {
            $("#Category").css('border-color',"lightgrey")
        }
        return isValid;
    }
    function getbyId(Id) {
      
        $('#Name').css('border-color', 'lightgrey');
        $('#Price').css('border-color', 'lightgrey');
        $('#Decription').css('border-color', 'lightgrey');
        $('#Author').css('border-color', 'lightgrey');
        $('#Category').css('border-color', 'lightgrey');
        $.ajax({
            url: '/Admin/GetById/' + Id,
            type: 'GET',
            contentType: 'application/json;charset=UTF-8',
            dataType: 'json',
            success: function (result) {
                $('#Id').val(result.Id);
                $('#Name').val(result.Name);
                $('#Price').val(result.Price);
                $('#Decription').val(result.Description);
                $('#Author').val(result.AuthorId);
                $('#Category').val(result.CategoryId);
                $('#myModal').modal('show');
                $('#btnUpdate').show();
                $('#EditingLabel').show();
                $('#AddingLabel').hide();
                $('#btnAdd').hide();
            },
            error: function(errorMessage) {
                alert(errorMessage.responseText);
            }
        });
        
        return false;
    }
    
</script>
    @RenderSection("scripts", required: false)
</body>
</html>
