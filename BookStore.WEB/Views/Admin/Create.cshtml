@model BookStore.BLL.DTO.BookDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        <label for="Name">Название</label>
        <input type="text" class="form-control" id="Name"/>

    </div>
    <div class="form-group">
        <label for="Decription">Описание</label>
        <textarea id="Decription" class="form-control" rows="6"></textarea>

    </div>
    <div class="form-group">
        <label for="Price">Цена</label>
        <input type="text" class="form-control" id="Price" placeholder="Например : 3000 руб"/>
    </div>
    <div class="form-group">
        <label for="Author">Автор</label>
        @Html.DropDownListFor(m=>m.AuthorId, ViewBag.authors as SelectList, new {id = "Author", @class = "form-control"})
    </div>
    <div class="form-group">
        <label for="Category">Жанр</label>
        @Html.DropDownListFor(m=>m.CategoryId, ViewBag.categories as SelectList, new {id = "Category", @class = "form-control"})
    </div>

    <input type="submit" value="Подтвердить" class="btn btn-primary" />
}


