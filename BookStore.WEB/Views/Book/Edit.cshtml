@model  BookStore.BLL.DTO.BookDTO
<div>
    @*@using(Html.BeginForm())*@
    @using (Ajax.BeginForm("Edit", "Book", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "updateAdminPanel", OnSuccess = "closeDialog" }))
    {

        
        @Html.HiddenFor(m => m.Id)
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="Name">Название</label>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m=>m.Name)
        </div>
        <div class="form-group">
            <label for="Decription">Описание</label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
        <div class="form-group">
            <label for="Price">Цена</label>
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Цена в бел. руб, например 10" } })
            @Html.ValidationMessageFor(m => m.Price)
        </div>
        <div class="form-group">
            <label for="Author">Автор</label>
            @Html.DropDownListFor(m => m.AuthorId, ViewBag.authors as SelectList,null ,new {@class = "form-control"})
      
        </div>
        <div class="form-group">
            <label for="Category">Жанр</label>
            @Html.DropDownListFor(m => m.CategoryId, ViewBag.categories as SelectList, new { @class = "form-control" })
       
        </div>
        <button type="submit" class="btn btn-secondary">Подтвердить</button>
    }
</div>