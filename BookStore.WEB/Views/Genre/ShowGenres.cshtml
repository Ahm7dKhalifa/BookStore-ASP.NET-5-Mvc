@model IEnumerable<BookStore.BLL.DTO.CategoryDTO>
@Html.ActionLink("Добавить жанр", "Create", null, new { @class = "btn btn-primary mb-2" })
<table class="table table-hover">
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", "Admin", new { id = category.Id },
                        new {@class= "viewDialog", data_dialog_title = "Редактирование модели" })
                </td>
                <td>
                    @Ajax.ActionLink("Удалить", "Delete", "Admin",
                        new { id =category.Id},new AjaxOptions { HttpMethod="POST",UpdateTargetId = "updateAdminPanel",Confirm = "Вы действительно хотите удалить этот объект?"
                        })
                </td>
            </tr>
        }
    </tbody>
</table>

